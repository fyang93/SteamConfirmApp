<div class="pe-sm-1 pe-md-2 mb-3">
    <ul class="list-group list-group-horizontal-md">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="onlyCheckCurrentAccountSwitch" @bind="Settings.OnlyCheckCurrentAccount">
                <label class="form-check-label" for="onlyCheckCurrentAccountSwitch">仅查询当前账号确认</label>
            </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="autoCheckConfirmsSwitch" @bind="Settings.AutoCheckConfirms">
                <label class="form-check-label" for="autoCheckConfirmsSwitch">轮询确认</label>
            </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="autoConfirmMarketListingSwitch" @bind="Settings.AutoConfirmMarketListing">
                <label class="form-check-label" for="autoConfirmMarketListingSwitch">自动确认上架</label>
            </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="autoConfirmTradesSwitch" @bind="Settings.AutoConfirmTrades">
                <label class="form-check-label" for="autoConfirmTradesSwitch">自动确认交易</label>
            </div>
        </li>
    </ul>
</div>

@code {
    [CascadingParameter]
    protected Settings Settings { get; set; }
}